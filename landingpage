    <script>
      function signUp() {
        let name = prompt("Please enter your first name");
        let email = prompt(
          "Hello there, " +
            name +
            ". Would you like to sign up for emails from Philadelphia Tourism with access to exclusive deals at local businesses?"
        );
        email = email.toLowerCase();
        if (email === "yes") {
          let email = prompt(
            "You're on your way to being an insider. What is your email address?"
          );
          alert(
            "Thank you " +
              name +
              "! You have been signed up! Please check your email for further details. Have fun exploring Philly :)"
          );
        } else {
          alert(
            "Just click the button on our page to sign up if you change your mind!"
          );
        }
      }
      let signUpButton = document.querySelector("button");
      signUpButton.addEventListener("click", signUp);
    </script>
